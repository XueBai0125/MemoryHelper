<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="56dp"
                    android:background="@color/colorPrimary">
        <ImageView
                android:id="@+id/iv_finish"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:src="@drawable/nav_leftbai"
                android:layout_centerVertical="true"
                android:padding="16dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Add to"
                  android:layout_centerInParent="true"
                  android:textColor="@color/white"
                  android:textSize="16sp"/>
    </RelativeLayout>




    <EditText
        android:id="@+id/et_title"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_bg"
        android:gravity="top|left"
        android:padding="@dimen/dp16"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginRight="@dimen/dp16"
        android:hint="title"
        android:textSize="@dimen/sp16"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorCCC"
        android:textCursorDrawable="@null"
        android:scrollbars="vertical" />
    <TextView
        android:id="@+id/tv_type"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/dp8"
        android:background="@drawable/edit_bg"
        android:gravity="top|left"
        android:padding="@dimen/dp16"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginRight="@dimen/dp16"
        android:hint="@string/input_category"
        android:textSize="@dimen/sp16"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorCCC"
        android:textCursorDrawable="@null"
        android:scrollbars="vertical" />
    <EditText
        android:id="@+id/et_content"
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:layout_marginTop="@dimen/dp8"
        android:background="@drawable/edit_bg"
        android:gravity="top|left"
        android:padding="@dimen/dp16"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginRight="@dimen/dp16"
        android:hint="Please enter the content"
        android:textSize="@dimen/sp16"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorCCC"
        android:textCursorDrawable="@null"
        android:scrollbars="vertical" />


    <TextView
        android:id="@+id/bt_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>